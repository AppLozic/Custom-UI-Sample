<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_box"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_textview"
            android:id="@+id/message_body"
            android:textColor="#000"
            android:padding="8dp"
            android:maxWidth="240dp"
            android:text="Check me"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_marginRight="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sender_attachment_view"
            android:visibility="gone">
            <include layout="@layout/attachment_view"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_time"
        android:text="10:00"
        android:textSize="10sp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/message_box"
        app:layout_constraintRight_toRightOf="@id/message_box"/>

    <ImageView
        android:id="@+id/delivery_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/message_time"
        app:layout_constraintRight_toRightOf="@id/message_time"/>

</android.support.constraint.ConstraintLayout>